<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:backgroundTint="@color/black">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="413dp"
                android:layout_height="224dp"
                android:layout_marginStart="1dp"
                tools:ignore="MissingConstraints">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="412dp"
                    android:layout_height="226dp"
                    android:background="@drawable/login_page_gradient">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="@string/userDashBoardTopic"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="158dp"
                        android:layout_height="116dp"
                        android:layout_marginTop="40dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView12"
                        app:srcCompat="@drawable/ic_baseline_account_24" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="800dp"
                android:background="@color/black">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="356dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/squre_shape"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.49"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/userName"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/textView18"
                    app:layout_constraintTop_toTopOf="@+id/textView18" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/userPosition"
                    android:textColor="@color/accent_color"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="@+id/textView19"
                    app:layout_constraintHorizontal_bias="0.487"
                    app:layout_constraintStart_toStartOf="@+id/textView19"
                    app:layout_constraintTop_toBottomOf="@+id/textView19" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawableStart="@drawable/ic_location_24"
                    android:text="@string/userLocation"
                    android:textColor="@color/accent_color"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="@+id/textView19"
                    app:layout_constraintHorizontal_bias="0.365"
                    app:layout_constraintStart_toStartOf="@+id/textView19"
                    app:layout_constraintTop_toBottomOf="@+id/textView20" />

                <Button
                    android:id="@+id/editPro"
                    android:layout_width="124dp"
                    android:layout_height="49dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="24dp"
                    android:backgroundTint="@color/purple_700"
                    android:text="Edit Profile"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@+id/textView18"
                    app:layout_constraintTop_toTopOf="@+id/textView18" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="146dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/design_default_color_error"
                    android:text="Delete Account"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@+id/editPro"
                    app:layout_constraintTop_toBottomOf="@+id/editPro" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/ManageAds"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView18" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="390dp"
                    android:layout_height="118dp"
                    app:layout_constraintEnd_toEndOf="@+id/constraintLayout3"
                    app:layout_constraintStart_toStartOf="@+id/constraintLayout3"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

                    <Button
                        android:id="@+id/editAdbtn1"
                        android:layout_width="80dp"
                        android:layout_height="39dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@color/btncolor"
                        android:text="Edit Ad"
                        android:textColor="@color/white"
                        app:layout_constraintStart_toEndOf="@+id/imageView1"
                        app:layout_constraintTop_toBottomOf="@+id/textView2" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/DashBoardItem_04"
                        android:textStyle="normal|bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.473"
                        app:layout_constraintStart_toEndOf="@+id/imageView1"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="136dp"
                        android:layout_height="104dp"
                        android:layout_marginStart="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/notes02" />

                    <Button
                        android:id="@+id/EditAdbtn2"
                        android:layout_width="80dp"
                        android:layout_height="39dp"
                        android:layout_marginStart="20dp"
                        android:backgroundTint="@android:color/holo_red_dark"
                        android:text="Edit Ad"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="@+id/editAdbtn1"
                        app:layout_constraintStart_toEndOf="@+id/editAdbtn1"
                        app:layout_constraintTop_toTopOf="@+id/editAdbtn1"
                        app:layout_constraintVertical_bias="0.0" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout3"
                    android:layout_width="390dp"
                    android:layout_height="118dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/constraintLayout2"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

                    <Button
                        android:id="@+id/editAdbtn3"
                        android:layout_width="80dp"
                        android:layout_height="39dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="4dp"
                        android:backgroundTint="@color/btncolor"
                        android:text="Edit Ad"
                        android:textColor="@color/white"
                        app:layout_constraintStart_toEndOf="@+id/imageView2"
                        app:layout_constraintTop_toBottomOf="@+id/textView4" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/DashBoardItem_03"
                        android:textStyle="normal|bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.473"
                        app:layout_constraintStart_toEndOf="@+id/imageView2"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="136dp"
                        android:layout_height="104dp"
                        android:layout_marginStart="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/notes01" />

                    <Button
                        android:id="@+id/EditAdbtn5"
                        android:layout_width="80dp"
                        android:layout_height="39dp"
                        android:layout_marginStart="9dp"
                        android:backgroundTint="@android:color/holo_red_dark"
                        android:text="Edit Ad"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="@+id/editAdbtn3"
                        app:layout_constraintStart_toEndOf="@+id/editAdbtn3"
                        app:layout_constraintTop_toTopOf="@+id/editAdbtn3" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout2"
                    android:layout_width="390dp"
                    android:layout_height="118dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/constraintLayout"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

                    <Button
                        android:id="@+id/editAdbtn6"
                        android:layout_width="80dp"
                        android:layout_height="39dp"
                        android:layout_marginStart="32dp"
                        android:backgroundTint="@color/btncolor"
                        android:text="Edit Ad"
                        android:textColor="@color/white"
                        app:layout_constraintStart_toEndOf="@+id/imageView8"
                        app:layout_constraintTop_toBottomOf="@+id/textView6" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/DashBoardItem_02"
                        android:textStyle="normal|bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.473"
                        app:layout_constraintStart_toEndOf="@+id/imageView8"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="136dp"
                        android:layout_height="104dp"
                        android:layout_marginStart="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/image_11" />

                    <Button
                        android:id="@+id/EditAdbtn7"
                        android:layout_width="80dp"
                        android:layout_height="39dp"
                        android:layout_marginStart="12dp"
                        android:backgroundTint="@android:color/holo_red_dark"
                        android:text="Edit Ad"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="@+id/editAdbtn6"
                        app:layout_constraintStart_toEndOf="@+id/editAdbtn6"
                        app:layout_constraintTop_toTopOf="@+id/editAdbtn6"
                        app:layout_constraintVertical_bias="0.0" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="390dp"
                    android:layout_height="118dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.476"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView22">

                    <Button
                        android:id="@+id/editAdbtn"
                        android:layout_width="80dp"
                        android:layout_height="39dp"
                        android:layout_marginStart="36dp"
                        android:backgroundTint="@color/btncolor"
                        android:text="Edit Ad"
                        android:textColor="@color/white"
                        app:layout_constraintStart_toEndOf="@+id/imageView9"
                        app:layout_constraintTop_toBottomOf="@+id/textView23" />

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/DashBoardItem_01"
                        android:textStyle="normal|bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.473"
                        app:layout_constraintStart_toEndOf="@+id/imageView9"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="136dp"
                        android:layout_height="104dp"
                        android:layout_marginStart="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/objects" />

                    <Button
                        android:id="@+id/EditAdbtn"
                        android:layout_width="80dp"
                        android:layout_height="39dp"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="@android:color/holo_red_dark"
                        android:text="Edit Ad"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="@+id/editAdbtn"
                        app:layout_constraintStart_toEndOf="@+id/editAdbtn"
                        app:layout_constraintTop_toTopOf="@+id/editAdbtn"
                        app:layout_constraintVertical_bias="0.0" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>